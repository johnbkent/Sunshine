<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:background="@drawable/touch_selector" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout  android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1">
        <TextView android:id="@id/list_item_date_textview" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Today, June 24" android:layout_gravity="center" android:padding="@dimen/abc_button_padding_vertical_material"/>

        <TextView android:id="@id/list_item_high_textview"  android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="21\u00B0" android:layout_gravity="center" android:padding="@dimen/abc_button_padding_vertical_material"/>
        <TextView android:id="@id/list_item_low_textview" android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:text="14\u00B0" android:layout_gravity="center" android:padding="@dimen/abc_button_padding_vertical_material"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:gravity="center">

        <ImageView android:src="@mipmap/ic_launcher" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@id/list_item_icon" android:padding="@dimen/abc_button_padding_vertical_material" />

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@id/list_item_forecast_textview" android:padding="@dimen/abc_button_padding_vertical_material" />


    </LinearLayout>

</LinearLayout>